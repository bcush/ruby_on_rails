<h1>Editing user</h1>
<form action="/users/<%= @user.id %>" method="post">
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
<input type="hidden" name="_method" value="patch">
  <label>First name
    <input type="text" name="first_name" placeholder="<%= @user.first_name %>"></label>
  <label>Last name
    <input type="text" name="last_name" placeholder="<%= @user.last_name %>"></label>
  <label>Email
    <input type="text" name="email_address" placeholder="<%= @user.email_address %>"></label>
  <label>Password
    <input type="text" name="password" placeholder="<%= @user.password %>"></label>
  <input type="submit" value="Update">
</form>
<a href="/users/<%= @user.id %>">Show</a> | <a href="/users">Back</a>
