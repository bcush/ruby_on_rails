<h1>Listing products</h1>
<table>
<thead>
  <tr>
    <td>Name</td>
    <td>Description</td>
    <td>Price</td>
    <td>Category</td>
    <td></td>
  </tr>
</thead>
<% @products.each do |product| %>
<tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.pricing %></td>
  <td><%= product.category.name %></td>
  <td><a href="/products/<%= product.id %>">Show</a> | <a href="/products/<%= product.id %>/edit">Edit</a> | <a href= "products/<%= product.id %>" data-method='delete'>Destroy</a></td>
</tr>
<% end %>
</table>

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<a href="/products/new">New Product</a>
